<p id="notice"><%= notice %></p>

<h1>Product Requests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Supplier</th>
      <th>Price</th>
      <th>Product code</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_requests.each do |product_request| %>
      <tr>
        <td><%= product_request.name %></td>
        <td><%= product_request.amount %></td>
        <td><%= product_request.supplier_id %></td>
        <td><%= product_request.price %></td>
        <td><%= product_request.product_code %></td>
        <td><%= product_request.user_id %></td>
        <td><%= link_to 'Show', product_request %></td>
        <td><%= link_to 'Edit', edit_product_request_path(product_request) %></td>
        <td><%= link_to 'Destroy', product_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

