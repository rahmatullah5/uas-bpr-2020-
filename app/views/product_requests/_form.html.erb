<%= form_for @product_request, :html => { :class => "form-horizontal product_request" } do |f| %>

  <% if @product_request.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@product_request.errors.count, "error") %> prohibited this product_request from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @product_request.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :amount, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :amount, :class => 'form-control' %>
    </div>
    <%=f.error_span(:amount) %>
  </div>

  <div class="form-group">
    <%= f.label :product_code, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :product_code, :class => 'form-control' %>
    </div>
    <%=f.error_span(:product_code) %>
  </div>
   <%= f.hidden_field :employee_id, :class => 'form-control', value: current_employee.id %>


  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                product_requests_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
